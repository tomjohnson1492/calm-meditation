---
layout: null
---

<?xml version="1.0" encoding="UTF-8"?>
<rss xmlns:media="http://search.yahoo.com/mrss/" version="2.0">
   <channel>
      <title>{{ site.title }}</title>
      <link>{{ site.url | append: site.baseurl }}</link>
      <description>{{ site.description }}</description>
      {% for item in site.posts %}
      <item>
         <title>{{ item.title }}</title>
         <pubDate>{{ item.date | date: "%a, %d %b %Y %T %z" }}</pubDate>
         <link>{{ item.url | prepend: site.baseurl | prepend: site.url }} </link>
         <description>{{ item.description }}</description>
         <guid isPermaLink="false">{{ item.url | prepend: site.baseurl | prepend: site.url }} </guid>
         <media:category>Lifestyle</media:category>
         <media:category>Health &amp; Fitness</media:category>
         <media:content
           url="{{ item.media_url | prepend: site.baseurl_media }}"
           fileSize="{{ item.filesize }}"
           type="video/mpeg"
           height="1280"
           width="720"
           duration="{{ item.duration }}"
           medium="video"
           isDefault="true">
            <media:title type="plain">{{ item.title }}</media:title>
            <media:description type="html">{{ item.description }}</media:description>
            <media:thumbnail url="{{ item.media_thumbnail | prepend: "/images/thumbs/" | prepend: site.url }}" width="300" height="300"/>
            <media:credit role="author" scheme="urn:ebu">Tom Johnson</media:credit>
            <media:copyright url="https://creativecommons.org/licenses/by/4.0/">Creative Commons (CC BY 4.0)</media:copyright> %}
         </media:content>
      </item>
      {% endfor %}
   </channel>
</rss>
